# ----------------------------
# Runtime & Server
# ----------------------------
NODE_ENV=development
PORT=1060

# ----------------------------
# Database (MySQL)
# ----------------------------
DATABASE_URL=mysql://username:password@localhost:3306/prompt_workflow_manager

# ----------------------------
# Session / Authentication
# ----------------------------
JWT_SECRET=change-me-to-a-long-random-string
COOKIE_NAME=app_session_id

# Admin bootstrap (optional: grant admin role to this user when first seen)
OWNER_EMAIL=owner@example.com

# ----------------------------
# Frontend Branding
# ----------------------------
VITE_APP_TITLE=TeachPT
APP_LOGO=/teachpt-logo.png

# ----------------------------
# Forge Proxy / Storage / Map
# ----------------------------
BUILT_IN_FORGE_API_URL=https://forge.example.com
BUILT_IN_FORGE_API_KEY=server-side-forge-key
VITE_FRONTEND_FORGE_API_URL=https://forge.example.com
VITE_FRONTEND_FORGE_API_KEY=public-forge-key

# ----------------------------
# Email (for verification & login codes)
# ----------------------------
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=no-reply@example.com
SMTP_PASS=super-secret
MAIL_FROM_NAME=TeachPT
MAIL_FROM_ADDRESS=no-reply@example.com

# ----------------------------
# Supabase Auth
# ----------------------------
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=service-role-key
SUPABASE_JWT_SECRET=your-supabase-jwt-secret
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=public-anon-key
# Optional: map a specific Supabase user ID to admin
OWNER_OPEN_ID=
